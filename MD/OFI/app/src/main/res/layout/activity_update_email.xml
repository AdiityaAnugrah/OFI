<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sp"
    tools:context=".UpdateEmailActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cdv_inpt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="22dp"
        app:cardCornerRadius="10dp"
        android:visibility="gone"
        app:cardElevation="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="22dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Masukan Password Anda"
                android:layout_gravity="center"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/besar"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/butoon_shape"
                android:paddingLeft="15dp"
                app:boxStrokeColor="#4E4A4A"
                app:boxStrokeWidth="1dp"
                app:hintTextColor="#4E4A4A"
                android:inputType="textPassword"
                android:hint="Password Sekarang" />

            <Button
                android:id="@+id/btn_konfirmasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/red"
                android:elevation="15dp"
                android:fontFamily="@font/light"
                android:gravity="center"
                android:text="KOnfirmasi" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cdv_update_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="22dp"
        app:cardCornerRadius="10dp"
        android:visibility="visible"
        app:cardElevation="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="22dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Masukan Email Baru"
                android:layout_gravity="center"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/besar"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edt_update_email"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                app:boxStrokeColor="#4E4A4A"
                app:boxStrokeWidth="1dp"
                app:hintTextColor="#4E4A4A"
                android:background="@drawable/butoon_shape"

                android:hint="Masukan Email Baru" />

            <Button
                android:id="@+id/btn_update_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/red"
                android:elevation="15dp"
                android:fontFamily="@font/light"
                android:gravity="center"
                android:text="Update Email" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>